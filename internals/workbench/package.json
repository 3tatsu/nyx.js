{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@nyxjs/workbench",
    "description": "Workbench for nyx.js",
    "version": "1.0.0",
    "type": "module",
    "readme": "README.md",
    "license": "AGPL-3.0-only",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "start": "tsx watch src/index.ts",
        "format": "biome format --write .",
        "lint": "biome lint --write --unsafe .",
        "check": "biome check --write --unsafe ."
    },
    "dependencies": {
        "@nyxjs/core": "workspace:*",
        "@nyxjs/gateway": "workspace:*",
        "@nyxjs/logger": "workspace:*",
        "@nyxjs/rest": "workspace:*",
        "chalk": "^5.3.0",
        "dotenv": "^16.4.5",
        "nyx.js": "workspace:*",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/node": "^22.9.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    }
}
