{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "tsup.config.ts",
                ".env*"
            ]
        },
        "build": {
            "dependsOn": [
                "^build",
                "clean"
            ],
            "outputs": [
                "dist/**"
            ],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "tsup.config.ts",
                "package.json"
            ]
        },
        "clean": {
            "cache": false
        },
        "format": {
            "inputs": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx",
                "**/*.json"
            ],
            "outputs": []
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "inputs": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx"
            ],
            "outputs": []
        },
        "check": {
            "dependsOn": [
                "^check"
            ],
            "inputs": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx"
            ],
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "tests/**/*.ts",
                "tests/**/*.tsx",
                "vitest.config.ts"
            ],
            "outputs": []
        },
        "test:watch": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "^build"
            ]
        },
        "test:bench": {
            "cache": false,
            "dependsOn": [
                "^build"
            ]
        },
        "test:coverage": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "type-check": {
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "tests/**/*.ts",
                "tests/**/*.tsx",
                "tsconfig.json"
            ],
            "outputs": []
        },
        "prepack": {
            "dependsOn": [
                "clean",
                "build"
            ]
        },
        "validate": {
            "dependsOn": [
                "type-check",
                "check",
                "test"
            ],
            "outputs": []
        }
    }
}
