{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/rest",
  "version": "1.0.0",
  "description": "Efficient REST API Management for Nyx.js",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3tatsu/nyx.js",
    "directory": "packages/rest"
  },
  "bugs": {
    "url": "https://github.com/3tatsu/nyx.js/issues"
  },
  "author": {
    "name": "3tatsu",
    "url": "https://github.com/3tatsu"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && rimraf .tsup",
    "clean": "rimraf dist",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nyxjs/core": "workspace:*",
    "@nyxjs/store": "workspace:*",
    "eventemitter3": "^5.0.1",
    "form-data": "^4.0.1",
    "minizlib": "^3.0.1",
    "undici": "^6.21.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@microsoft/api-extractor": "^7.48.1",
    "@nyxjs/configs": "workspace:*",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@nyxjs/core": "workspace:*",
    "@nyxjs/store": "workspace:*",
    "typescript": "^5.7.2"
  }
}
