{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/core",
  "version": "1.0.0",
  "description": "Core package for Nyx.js",
  "type": "commonjs",
  "readme": "README.md",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "3tatsu",
    "url": "https://github.com/3tatsu"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3tatsu/nyx.js.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.11",
    "@types/node": "^22.5.0",
    "eslint": "^8.57.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
