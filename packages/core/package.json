{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/core",
  "version": "1.0.0",
  "description": "Fundamental Components and Utilities for Nyx.js",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3tatsu/nyx.js",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/3tatsu/nyx.js/issues"
  },
  "author": {
    "name": "3tatsu",
    "url": "https://github.com/3tatsu"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && rimraf .tsup",
    "clean": "rimraf dist",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@microsoft/api-extractor": "^7.47.11",
    "@nyxjs/configs": "workspace:*",
    "@types/node": "^22.9.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  }
}
