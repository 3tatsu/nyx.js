{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "nyx.js",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && rimraf .tsup",
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "pretty": "prettier --write src",
    "test": "ts-node-dev --respawn --transpile-only --no-notify --prefer-ts-exts --files tests/index.ts"
  },
  "dependencies": {
    "@nyxjs/core": "workspace:*",
    "@nyxjs/rest": "workspace:*",
    "@nyxjs/store": "workspace:*",
    "@nyxjs/utils": "workspace:*",
    "@nyxjs/ws": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.47.9",
    "@swc/core": "^1.7.28",
    "@types/node": "^22.7.3",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "terser": "^5.34.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
