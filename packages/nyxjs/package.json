{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "nyx.js",
  "version": "1.0.0",
  "description": "A powerful and easy-to-use Discord API wrapper for Node.js.",
  "type": "commonjs",
  "readme": "README.md",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/src/index.d.ts",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "3tatsu",
    "url": "https://github.com/3tatsu"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3tatsu/nyx.js.git"
  },
  "scripts": {
    "build": "pnpm run clean && tsup --config tsup.config.ts && rimraf .tsup",
    "lint": "eslint --format=pretty src --fix",
    "pretty": "prettier --write src",
    "clean": "rimraf dist"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@nyxjs/store": "workspace:*",
    "@nyxjs/core": "workspace:*",
    "@nyxjs/rest": "workspace:*",
    "@nyxjs/utils": "workspace:*",
    "@nyxjs/ws": "workspace:*",
    "eventemitter3": "^5.0.1",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.47.9",
    "@swc/core": "^1.7.26",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.5.5",
    "@types/ws": "^8.5.12",
    "eslint": "^8.57.0",
    "eslint-formatter-pretty": "^5.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  }
}
