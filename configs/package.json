{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/configs",
  "version": "1.0.0",
  "description": "Shared configurations for Nyx.js packages",
  "private": true,
  "type": "module",
  "files": [
    "tsconfig/",
    "tsup/",
    "biome/"
  ],
  "exports": {
    "./biome": "./biome/biome.json",
    "./tsconfig/base": "./tsconfig/base.json",
    "./tsup": {
      "types": "./tsup/config.d.ts",
      "default": "./tsup/config.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "tsup": [
        "./tsup/config.d.ts"
      ]
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}