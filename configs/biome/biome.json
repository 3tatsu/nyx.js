{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": false,
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "all": true
      }
    },
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
