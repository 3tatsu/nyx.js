{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "useEditorconfig": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto",
        "bracketSpacing": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "useLiteralKeys": "off"
            },
            "nursery": {
                "noEnum": "off",
                "noRestrictedImports": "off"
            },
            "performance": {
                "noBarrelFile": "off",
                "noReExportAll": "off"
            }
        },
        "ignore": [
            "**/dist/*",
            "**/node_modules/*",
            "**/.next/*"
        ]
    }
}
